---
interface Props {
  name: string;
  type: "先着" | "抽選";
}

const { name, type } = Astro.props;
---

<div class=":uno: border border-gray-400 bg-white p-4">
  <div
    class=":uno: flex <sm:flex-col items-center justify-between <sm:items-stretch gap-x-4 gap-y-6"
  >
    <div class=":uno: flex-1">
      <div class=":uno: flex items-center gap-2">
        <span class=":uno: text-lg font-bold text-coolGray-700">{name}</span>
        <span class=":uno: text-xs">〈{type}〉</span>
      </div>
      <div class=":uno: text-sm opacity-80">
        受付期間: 2025/XX/XX 〜 2025/XX/XX
      </div>
      <div class=":uno: text-xl text-blue-400 mt-4">販売終了</div>
    </div>
    <div class=":uno: flex-none">
      <div
        class=":uno: sm:w-40 bg-gray-500 text-white text-center rounded-sm px-4 py-2 cursor-default"
      >
        詳細
      </div>
    </div>
  </div>
</div>
